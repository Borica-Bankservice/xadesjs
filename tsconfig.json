{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "esnext",
        "lib": [
            "es5",
            "dom",
            "es2015.promise",
            "es2015.symbol"
        ],
        "noImplicitAny": true,
        "sourceMap": false,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "strictNullChecks": true,
        "pretty": true,
        "noImplicitReturns": true,
        "experimentalDecorators": true,
        "rootDir": "src",
        "outDir": "build",
        "importHelpers": true
    },
    "exclude": [
        "node_modules",
        "test",
        "src/pki",
        "src/index.ts"
    ]
}